{# [module]/templates/my-template.html.twig #}
<div class="mt-3">
	<form>
		<div
			class="row" style="width:95%;">
			{# FORMULAIRE #}
			<div
				class="col-3 pt-3">
				{# SERVICE #}
				<div class="mb-3">
					<label for="service" class="form-label">Service</label>
					<select class="form-select" aria-label="Default select example" id="service">
						<option selected></option>
						{% for service in services %}
						<option value="{{ service.nom }}">{{ service.nom }}</option>
						{% endfor %}
					</select>
				</div>
				{# FONCTION #}
				<div class="mb-3">
					<label for="fonction" class="form-label">Fonction</label>
					<select class="form-select" aria-label="Default select example" id="fonction">
						<option selected></option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
				{# NOM / PRENOM #}
				<div class="mb-3">
					<label for="nomPrenom" class="form-label">Nom / Prénom</label>
					<input type="text" class="form-control" id="nomPrenom">
				</div>
				{# NUMERO #}
				<div class="mb-3">
					<label for="numero" class="form-label">Numéro</label>
					<input type="text" class="form-control" id="numero">
				</div>
				{# PÔLE #}
				<div class="mb-3">
					<label for="pole" class="form-label">Pôle</label>
					<select class="form-select" aria-label="Default select example" id="pole">
						<option selected></option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
				{# BÂTIMENT #}
				<div class="mb-3">
					<label for="batiment" class="form-label">Bâtiment</label>
					<select class="form-select" aria-label="Default select example" id="batiment">
						<option selected></option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
				{# ETAGE #}
				<div class="mb-3">
					<label for="etage" class="form-label">Étage</label>
					<select class="form-select" aria-label="Default select example" id="etage">
						<option selected></option>
						<option value="1">One</option>
						<option value="2">Two</option>
						<option value="3">Three</option>
					</select>
				</div>
        {# RECHERCHER #}
        <div class="row">
        <div class="col">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
        <div class="col">
            <button type="submit" class="btn btn-danger">Effacer</button>
        </div>
        </div>
			</div>
			{# TABLEAU #}
			<div class="col-8 offset-1 pt-3">
        <h3>PERMANENCES DES SOINS – GARDE MEDICALE - PERMANENCES 24H/24</h3>
        <hr>
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Pôle et Service</th>
              <th scope="col">Numéros</th>
						</tr>
					</thead>
					<tbody>
            {% for service in services %}
						<tr>
							<td><strong>{{ service.nom }}</strong></td>
              <td>
                  <strong>{{ service.numeroCourt }}</strong><br>
                  {{ service.numeroLong }}
                  {% if service.numeroCourt2 != null and service.numeroLong2 != null %}
                  <br>
                  <strong>{{ service.numeroCourt2 }}</strong><br>
                  {{ service.numeroLong2 }}
                  {% endif %}
              </td>
						</tr>
            {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</form>
</div>